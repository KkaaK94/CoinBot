  "rsi_strategy": {
    "name": "RSI 과매수/과매도 전략",
    "description": "RSI 지표를 활용한 역추세 매매 전략",
    "enabled": true,
    "weight": 0.25,
    "parameters": {
      "rsi_period": 14,
      "rsi_overbought": 70,
      "rsi_oversold": 30,
      "rsi_extreme_overbought": 80,
      "rsi_extreme_oversold": 20,
      "rsi_smoothing": 3,
      "volume_confirmation": true,
      "min_volume_ratio": 1.2,
      "divergence_detection": true,
      "divergence_lookback": 10
    },
    "entry_conditions": {
      "buy": {
        "primary": "rsi <= rsi_oversold",
        "confirmation": [
          "rsi_slope > 0",
          "volume_ratio >= min_volume_ratio",
          "price > sma_50 * 0.98"
        ],
        "filters": [
          "not in_downtrend",
          "daily_volume > min_daily_volume",
          "spread_percentage < max_spread"
        ]
      },
      "sell": {
        "primary": "rsi >= rsi_overbought",
        "confirmation": [
          "rsi_slope < 0",
          "volume_ratio >= min_volume_ratio"
        ],
        "filters": [
          "profit_ratio > min_profit_threshold OR holding_hours > max_holding_hours"
        ]
      }
    },
    "exit_conditions": {
      "stop_loss": 0.05,
      "take_profit": 0.12,
      "trailing_stop": {
        "enabled": true,
        "initial_distance": 0.03,
        "step_size": 0.01
      },
      "time_based": {
        "max_holding_hours": 48,
        "min_holding_hours": 2
      }
    },
    "risk_management": {
      "max_position_size": 0.3,
      "confidence_calculation": {
        "base_confidence": 0.6,
        "rsi_extremeness_bonus": 0.2,
        "volume_bonus": 0.1,
        "divergence_bonus": 0.1,
        "trend_alignment_bonus": 0.1
      }
    }
  },
  "ma_crossover_strategy": {
    "name": "이동평균 교차 전략",
    "description": "단기/장기 이동평균 교차를 활용한 추세 추종 전략",
    "enabled": true,
    "weight": 0.2,
