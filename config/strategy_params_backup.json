    "entry_conditions": {
      "buy": {
        "primary": "ma_short > ma_long AND ma_short_prev <= ma_long_prev",
        "confirmation": [
          "ma_short_slope > min_crossover_strength",
          "ma_long_slope > -0.001",
          "volume_ratio >= 1.1",
          "price_above_crossover_point"
        ],
        "filters": [
          "not recent_whipsaw",
          "trend_confirmation_bullish",
          "market_not_oversold"
        ]
      },
      "sell": {
        "primary": "ma_short < ma_long AND ma_short_prev >= ma_long_prev",
        "confirmation": [
          "ma_short_slope < -min_crossover_strength",
          "volume_ratio >= 1.0"
        ],
        "filters": [
          "profit_ratio > -0.02 OR holding_hours > 24"
        ]
      }
    },
    "exit_conditions": {
      "stop_loss": 0.06,
      "take_profit": 0.15,
      "trailing_stop": {
        "enabled": true,
        "initial_distance": 0.04,
